@model IEnumerable<EntidadArtista>
<html>
<head>
    <title>Listado de Artista</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.3.1.js"
            integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
            crossorigin="anonymous"></script>

</head>
<!--hola-->
<body style="margin-top:20px">
    <form class="form-horizontal" id="form1">
        <div class="container">
            <div class="row">
                <div class="well well-sm">
                    <fieldset>
                        <table class="table table-hover" style="font-size:small">
                            <thead class="text-primary">
                                <tr>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Artista_id)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Artista_nombre)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Artista_nacionalidad)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Artista_biografia)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Artista_estado)
                                    </th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Artista_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Artista_nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Artista_nacionalidad)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Artista_biografia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Artista_estado)
                                    </td>

                                    <td>
                                        @Html.ActionLink("Activar", "activarArtista", new { Artista_id = item.Artista_id },
                                                        new { onclick = "return confirm('Está seguro de activar este Artista?');" })
                                    </td>
                                </tr>

                            }
                        </table>
                        <link href="~/StyleMenu.css" rel="stylesheet" />
                        <div id="menu">
                            <ul>
                                <li>@Html.ActionLink("Regresar", "listado", "Artista")</li>
                                <li>@Html.ActionLink("Menu", "insertarMuseo", "Museo")</li>
                            </ul>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </form>
</body>
</html>

