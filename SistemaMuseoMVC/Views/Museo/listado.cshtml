@model IEnumerable<EntidadMuseo>
<html>
<head>
    <title>Listado de Museo</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.3.1.js"
            integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
            crossorigin="anonymous"></script>

</head>
<!--hola-->
<body style="margin-top:20px">
    <form class="form-horizontal" id="form1">
        <div class="container">
            <div class="row">
                <div class="well well-sm">
                    <fieldset>
                        <table class="table table-hover" style="font-size:small">
                            <thead class="text-primary">
                                <tr>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Museo_id)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.TipoMuseo_id)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Museo_nombre)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Museo_instalacion)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Museo_estado)
                                    </th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Museo_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TipoMuseo_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Museo_nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Museo_instalacion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Museo_estado)
                                    </td>

                                    <td>
                                        @Html.ActionLink("Modificar", "modificarMuseo", new { Museo_id = item.Museo_id }) |
                                        @Html.ActionLink("Eliminar", "eliminarMuseo", new { Museo_id = item.Museo_id },
                                                        new { onclick = "return confirm('Está seguro de borrar este museo?');" })|

                                    </td>
                                </tr>

                            }

                        </table>
                        <span>
                            @Html.ActionLink("Museo nuevo", "insertarMuseo", "Museo", null, new { @class = "btn btn-primary btn-large" })
                        </span>
                        <div class="wrap-input100 validate-input" data-validate="Password is reqired">
                            <span class="label-input100">Password</span>
                            <input class="input100" type="password" name="pass" placeholder="Type your passwor">
                            <span class="focus-input100" data-symbol=></span>
                        </div>
                        <span>
                            @Html.ActionLink("Activar Museo", "listadoInactivo", "Museo", null, new { @class = "btn btn-primary btn-large" })
                        </span>

                    </fieldset>
                </div>
            </div>
        </div>
    </form>
</body>
</html>

