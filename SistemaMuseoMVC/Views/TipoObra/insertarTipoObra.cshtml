@model EntidadTipoObra
@{
    ViewBag.Title = "Insertar de TipoObra";

}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://code.jquery.com/jquery-3.2.1.js"
        integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE="
        crossorigin="anonymous"></script>

<title>Insertar de TipoObra</title>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div class="form-group">
            @Html.LabelFor(model => model.TipoObra_tipoObra, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TipoObra_estado, new SelectList(
                new List<Object>
                {
                    new{ value = "Pintura", text="Pintura"},
                    new{ value = "Escultura", text="Escultura"},
                    new{ value = "Arma", text="Arma"},
                    new{ value = "Avion", text="Avion"},
                    new{ value = "Auto", text="Auto"},
                    new{ value = "Instrumento Musical", text="Instrumento Musical"}
                },
                "value",
                "text",
                1))
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipoObra_descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TipoObra_descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TipoObra_descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TipoObra_estado, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TipoObra_estado, new SelectList(
                new List<Object>
                {
                    new{ value = "A", text="Activo"},
                 
                },
                "value",
                "text",
                1))
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" style="BORDER: rgb(128,128,128) 1px double; BACKGROUND-COLOR: rgb(23,214,52)" />
            </div>
        </div>
    </div>
}
    <link href="~/StyleMenu.css" rel="stylesheet" />
    <div id="menu">
        <ul>
            <li>@Html.ActionLink("Back to List", "listado", "TipoObra")</li>
            <li>@Html.ActionLink("Menu", "listado", "Museo")</li>
        </ul>
    </div>

