@model IEnumerable<EntidadObra>
<html>
<head>
    <title>Listado de Obra</title>

    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.3.1.js"
            integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
            crossorigin="anonymous"></script>

</head>
<!--hola-->
<body style="margin-top:20px">
    <form class="form-horizontal" id="form1">
        <div class="container">
            <div class="row">
                <div class="well well-sm">
                    <fieldset>
                        <table class="table table-hover" style="font-size:small">
                            <thead class="text-primary">
                                <tr>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Obra_id)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Artista_id)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Coleccion_id)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.TipoObra_id)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Obra_nombre)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Obra_descripcion)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Obra_cultura)
                                    </th>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Obra_estado)
                                    </th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Obra_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Artista_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Coleccion_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TipoObra_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Obra_nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Obra_descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Obra_cultura)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Obra_estado)
                                    </td>

                                    <td>
                                        @Html.ActionLink("Modificar", "modificarObra", new { Obra_id = item.Obra_id }) |
                                        @Html.ActionLink("Eliminar", "eliminarObra", new { Obra_id = item.Obra_id },
                                                        new { onclick = "return confirm('Está seguro de borrar este Obra?');" })|

                                    </td>
                                </tr>

                            }

                        </table>
                        <link href="~/StyleMenu.css" rel="stylesheet" />
                        <div id="menu">
                            <ul>

                                <li>@Html.ActionLink("Obra nuevo", "insertarObra", "Obra")</li>
                                <li>@Html.ActionLink("Activar Obra", "listadoInactivo", "Obra")</li>
                                <li>@Html.ActionLink("Menu", "insertarMuseo", "Museo")</li>

                            </ul>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </form>
</body>
</html>

